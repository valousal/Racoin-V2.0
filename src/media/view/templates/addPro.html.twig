{% extends "main.html.twig" %}


{% block main_content %}
    <section id="add">
        <div>
            <div>
                <h2>Annonceur</h2>
                <form action='{{url}}' method='post' enctype="multipart/form-data"> <!--enctype précise au serv que le formulaire envoit des texte et des données binaires-->
                    <span>
                        <label><img src="{{rootUri}}/data/icons/mail.png" alt=""></label>
                        <input type="mail" placeholder="Contact mail" name="mail">
                    </span>
                    <span>
                        <label><img src="{{rootUri}}/data/icons/password.png" alt=""></label>
                        <input type="password" placeholder="password" name="password">
                    </span>
                     <span>
                        <label><img src="{{rootUri}}/data/icons/author.png" alt=""></label>
                        <input type='text' placeholder='Nom' name='nom'>
                    </span>
                    <span>
                        <label><img src="{{rootUri}}/data/icons/password.png" alt=""></label>
                        <input type="tel" placeholder="tel" name="tel" maxlength='10'>
                    </span>
                    <span>
                        <label><img src="{{rootUri}}/data/icons/photo.png" alt=""></label>
                        <SELECT name="ville">
                            <OPTION VALUE="Nancy">Nancy</OPTION>
                            <OPTION VALUE="Metz">Metz</OPTION>
                            <OPTION VALUE="Lyon">Lyon</OPTION>
                            <OPTION VALUE="Paris">Paris</OPTION>
                            <OPTION VALUE="Villerupt">Villerupt</OPTION>
                        </SELECT> <!--Récupérer liste en json ou depuis une bdd externe?-->
                    </span>
                    <span>
                        <label><img src="{{rootUri}}/data/icons/address.png" alt=""></label>
                        <input type='text' placeholder='CP' name='CP'>
                    </span>
                    <span>    
                        <label><img src="{{rootUri}}/data/icons/category.png" alt=""></label>
                            <select name="categorie">
                                {% for it in Categories %}
                                    <option value="{{it.nom}}">{{it.nom}}</option>
                                {% endfor %}
                            </select>
                    </span>
                    <span>
                        <input type="submit" value="Submit" name="Submit"/>
                        <input type="reset" value="Reset" name="reset"/>
                    </span>
                </form>
            </div>
        </div>
    </section>
{% endblock %}